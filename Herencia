package main;
import operaciones.Resta;
import operaciones.Suma;
import operaciones.Division;
import operaciones.Producto;
import java.util.Scanner;

/**
 * Clase principal que controla el uso del programa mediante un simple menu 
 * al usuario.
 * 
 * @author vilarj
 */
public class Main {
    public static void main(String[] args){
        try (Scanner entrada = new Scanner(System.in)) {
            int operacion;
            System.out.print("Estas son las operaciones: "
                    + "\n 1) Suma. "
                    + "\n 2) Resta. "
                    + "\n 3) Multiplicacion."
                    + "\n 4) Division\n");
            
            operacion = entrada.nextInt();
            
            // Controlando la eleccion del usuario
            switch (operacion) {
                case 1:
                    Suma suma = new Suma();
                    suma.pedirDatos();
                    suma.Sumar();
                    System.out.print("El resultado de la suma es:") ;
                    suma.mostrarDatos();
                    break;
                case 2:
                    Resta resta = new Resta();
                    resta.pedirDatos();
                    resta.Resta();
                    System.out.print("El resultado de la resta es:") ;
                    resta.mostrarDatos();
                    break;
                case 3:
                    Division division = new Division();
                    division.pedirDatos();
                    division.Division();
                    System.out.print("El resultado de la division es:") ;
                    division.mostrarDatos();
                    break;
                case 4:
                    Producto producto = new Producto();
                    producto.pedirDatos();
                    producto.Producto();
                    System.out.print("El resultado de la multiplicacion es:") ;
                    producto.mostrarDatos();
                    break;
                default:
                    System.out.println("La operacion no esta en el menu.");
                    break;
            }
            // Cerrando la clase Scanner
            entrada.close();
        }
    }
}
